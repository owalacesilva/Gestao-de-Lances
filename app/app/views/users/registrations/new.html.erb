<style>
html,
body {
  height: 100%;
}

body {
  display: flex;
  align-items: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.form-signup {
  width: 100%;
  max-width: 960px;
  padding: 15px;
  margin: auto;
}

.form-signup .checkbox {
  font-weight: 400;
}

.form-signup .form-floating:focus-within {
  z-index: 2;
}

.form-signup input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.form-signup input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
</style>
<div class="form-signup">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Fa√ßa seu cadastro</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :first_name, class: "control-lable" %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :email, class: "control-lable" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :cpf_number, class: "control-lable" %>
              <%= f.text_field :cpf_number, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :rg_number, class: "control-lable" %>
              <%= f.text_field :rg_number, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :cnpj_number, class: "control-lable" %>
              <%= f.text_field :cnpj_number, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :razao_social, class: "control-lable" %>
              <%= f.text_field :razao_social, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :gender, class: "control-lable" %>
              <%= f.text_field :gender, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :birth_date, class: "control-lable" %>
              <%= f.text_field :birth_date, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :phone_number, class: "control-lable" %>
              <%= f.text_field :phone_number, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :personal_number, class: "control-lable" %>
              <%= f.text_field :personal_number, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="mb-3">
              <%= f.label :postal_code, class: "control-lable" %>
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-7">
            <div class="mb-3">
              <%= f.label :street_address, class: "control-lable" %>
              <%= f.text_field :street_address, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-2">
            <div class="mb-3">
              <%= f.label :street_number, class: "control-lable" %>
              <%= f.text_field :street_number, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="mb-3">
              <%= f.label :neighborhood, class: "control-lable" %>
              <%= f.text_field :neighborhood, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="mb-3">
              <%= f.label :city, class: "control-lable" %>
              <%= f.text_field :city, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="mb-3">
              <%= f.label :state, class: "control-lable" %>
              <%= f.text_field :state, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="mb-3">
              <%= f.label :country, class: "control-lable" %>
              <%= f.text_field :country, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :password, class: "control-lable" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="mb-3">
              <%= f.label :password_confirmation, class: "control-lable" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= f.submit "Finalizar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
