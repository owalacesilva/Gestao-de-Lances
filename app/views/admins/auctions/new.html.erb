<main class="admin-layout">
  <aside class="admin-sidebar">
    <div class="head d-flex justify-content-center align-items-center">
      <a href="/" class="d-flex text-decoration-none">
        <%= image_tag 'reward-logo.png', style: 'height: 70px;' %>
      </a>
    </div>
    <div class="menu">
      <ul class="menu-list">
        <li><%= link_to 'Todos os Clientes', '#', class: 'menu-link' %></li>
        <li><%= link_to 'Lista de Leilões', admins_auctions_path, class: 'menu-link active' %></li>
        <li><%= link_to 'Ver Lances', '#', class: 'menu-link' %></li>
        <li><%= link_to 'Lista de Arremates', '#', class: 'menu-link' %></li>
        <li><%= link_to 'Configurações', '#', class: 'menu-link' %></li>
      </ul>
    </div>
  </aside>
  <div class="admin-container">
    <div class="admin-header"></div>
    <div class="admin-content">
      <div class="container">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-4">Cadastrar novo Leilão</h5>
            <%= form_for(@resource, as: :auction, url: admins_auctions_path) do |f| %>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :title, class: "form-label" %>
                    <%= f.text_field :title, autofocus: true, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :start_date, class: "form-label" %>
                    <%= f.date_field :start_date, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :end_date, class: "form-label" %>
                    <%= f.date_field :end_date, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :opening_bid, class: "form-label" %>
                    <%= f.text_field :opening_bid, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :modality, class: "form-label" %>
                    <% @modality_fields = { 'online': 'Online', 'habilitado': 'Habilitado' } %>
                    <%= f.select :modality, options_from_collection_for_select(@modality_fields, :first, :last, '2'), { include_blank: false, prompt: 'Selecione uma modalidade' }, { class: "form-control" } %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :postal_code, class: "form-label" %>
                    <%= f.text_field :postal_code, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-7">
                  <div class="mb-3">
                    <%= f.label :street_address, class: "form-label" %>
                    <%= f.text_field :street_address, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-2">
                  <div class="mb-3">
                    <%= f.label :street_number, class: "form-label" %>
                    <%= f.text_field :street_number, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :neighborhood, class: "form-label" %>
                    <%= f.text_field :neighborhood, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :city, class: "form-label" %>
                    <%= f.text_field :city, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :state, class: "form-label" %>
                    <%= f.text_field :state, class: "form-control" %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :country, class: "form-label" %>
                    <%= f.text_field :country, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <%= f.label :description, class: "form-label" %>
                <%= f.text_area :description, class: "form-control", rows: 5 %>
              </div>
              <div class="mb-3">
                <%= f.label :important_notices, class: "form-label" %>
                <%= f.text_area :important_notices, class: "form-control", rows: 5 %>
              </div>

              <div class="mb-3 text-end">
                <%= f.submit "Finalizar", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
