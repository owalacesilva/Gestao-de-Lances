<main class="admin-layout">
  <aside class="admin-sidebar">
    <div class="head d-flex justify-content-center align-items-center">
      <a href="/" class="d-flex text-decoration-none">
        <%= image_tag 'reward-logo.png', style: 'height: 70px;' %>
      </a>
    </div>
    <div class="menu">
      <ul class="menu-list">
        <li><%= link_to 'Todos os Clientes', admins_clients_path, class: 'menu-link active' %></li>
        <li><%= link_to 'Lista de Leilões', admins_auctions_path, class: 'menu-link' %></li>
        <li><%= link_to 'Ver Lances', '#', class: 'menu-link' %></li>
        <li><%= link_to 'Lista de Arremates', '#', class: 'menu-link' %></li>
        <li><%= link_to 'Configurações', '#', class: 'menu-link' %></li>
      </ul>
    </div>
  </aside>
  <div class="admin-container">
    <div class="admin-header"></div>
    <div class="admin-content">
      <div class="container">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-4">Cadastrar novo Leilão</h5>
            <%= form_for(@client, as: :client, url: admins_clients_path) do |f| %>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :first_name, class: "form-label" %>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :last_name, class: "form-label" %>
                    <%= f.text_field :last_name, autofocus: true, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :rg_number, class: "form-label" %>
                    <%= f.text_field :rg_number, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :cpf_number, class: "form-label" %>
                    <%= f.text_field :cpf_number, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :razao_social, class: "form-label" %>
                    <%= f.text_field :razao_social, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :cnpj_number, class: "form-label" %>
                    <%= f.text_field :cnpj_number, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :birth_date, class: "form-label" %>
                    <%= f.text_field :birth_date, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :gender, class: "form-label" %>
                    <%= f.text_field :gender, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :phone_number, class: "form-label" %>
                    <%= f.text_field :phone_number, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="mb-3">
                    <%= f.label :personal_number, class: "form-label" %>
                    <%= f.text_field :personal_number, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :postal_code, class: "form-label" %>
                    <%= f.text_field :postal_code, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-7">
                  <div class="mb-3">
                    <%= f.label :street_address, class: "form-label" %>
                    <%= f.text_field :street_address, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-2">
                  <div class="mb-3">
                    <%= f.label :street_number, class: "form-label" %>
                    <%= f.text_field :street_number, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :neighborhood, class: "form-label" %>
                    <%= f.text_field :neighborhood, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :city, class: "form-label" %>
                    <%= f.text_field :city, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :state, class: "form-label" %>
                    <%= f.text_field :state, class: "form-control", readonly: true %>
                  </div>
                </div>
                <div class="col-lg-3">
                  <div class="mb-3">
                    <%= f.label :country, class: "form-label" %>
                    <%= f.text_field :country, class: "form-control", readonly: true %>
                  </div>
                </div>
              </div>
            <%- end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
