<%= render layout: 'admins/shared/painel', locals: { page: 'clients_list' } do %>
  <div class="container mt-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-4">Listagem de Clientes</h5>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">COD</th>
              <th scope="col">Nome</th>
              <th scope="col">CPF</th>
              <th scope="col">Telefone</th>
              <th scope="col">Endere√ßo</th>
              <th scope="col">Cadastrado em</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <th scope="row"><%= client.id %></th>
                <td><%= client.first_name %></td>
                <td><%= client.cpf_number %></td>
                <td><%= client.phone_number %></td>
                <td><%= client.street_address %></td>
                <td><%= client.created_at.to_date.strftime('%d/%m/%Y') %></td>
                <td><%= link_to 'Detalhes', admins_client_path(client.id) %></td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%- end %>
